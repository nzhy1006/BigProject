<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="PO.InformationEntity" table="information" schema="movieInfo">
        <id name="pointId">
            <column name="pointID" sql-type="varchar(100)" length="100"/>
        </id>
        <property name="userId">
            <column name="userID" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="longitude">
            <column name="longitude" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="latitude">
            <column name="latitude" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="info">
            <column name="info" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="movieName">
            <column name="movieName" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>